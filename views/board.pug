block header
  style.
    .board-header {
    background: rgba(0,0,0,.24);
    padding: 10px;
    }
    .board-header-btn {
        border-radius: 6px;
        font-size: 16px;
        display: inline-block;
        background-color: hsla(0,0%,100%,.24);
        color: #fff;
        margin-left: 15px;
        padding:8px;
        border: 0px;
    }
    .board-header-btn:hover {
        background: rgba(0,0,0,.08);
    }
    .board-header-btn .right {
      float: right;
    }
    .board-header .dropdown button:focus {
      outline: 0;
      box-shadow: none;
      
    }
   .board-header .dropdown-menu {
    width: 400px;
    padding: 0px;
    margin-top: 7px;
    margin-right: -2px;
    box-shadow: 2px 2px 8px #888888
    }
    .board-header .dropdown-menu p {
    font-size: 16px;
    color: #003333;
    }
    .board-header .dropdown-menu i{
    font-size:18px;
    font-weight:bold;
    padding: 5px;
    }
    .board-header .dropdown-menu a{
    color: #003333;
    }


    .board-body {
    padding: 10px;
    }

    .board-body .board-list{
    width: 300px;
    margin: 0px 4px;
    height: 100%;
    display: inline-block;
    vertical-align: top;
    }
    .board-body .board-list .board-list-content {
    background-color: #ebecf0;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    max-height: 100%;
    padding: 4px;
    box-shadow: 1px 1px 2px #888888;

    }
    .list-title {
    height:50px;
    }
    .list-title .title{
    text-align: center;
    width: 84%;
    display: inline-block;
    padding: 5px;
    }
    .list-title .mn{
    float: right;
    width: 16%;
    display: inline-block;
    padding: 5px;
    border-radius: 4px;
    text-align: center;
    height: 60%;
    }
    .list-title .mn:hover{
    background: rgba(0,0,0,.05);
    }

    .list-card .card-name {
    margin: 3px;
    padding: 10px;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 1px 1px 1px #888888;
    display:block;
    color:#172b4d;
    }
    .list-card .card-name:hover {
    background: rgba(0,0,0,.01);
    }
    
    .list-add a{
    border-radius: 5px;
    margin: 8px;
    padding: 8px;
    color: #5e6c84;
    display:block;
    }
    .list-add a:hover{
    background: rgba(0,0,0,.08);
    }
    .board-list .add-list{
    background-color: hsla(0,0%,100%,.24);
    padding: 14px;
    color:#172b4d;
    border-radius: 5px;
    box-shadow: 1px 1px 1px #888888;
    display: block;
    }
    .board-list .add-list:hover{
    background-color: hsla(0,0%,100%,.3);
    }
    .board-list .add-list i{
    font-weight: 900;
    color: #004466;
    }
    .submit{
    background-color: white;
    border-radius: 5px;
    box-shadow: 1px 1px 1px #888888;
    padding: 6px;
    display:none;
    }
    .submit .form-control{
    box-shadow: inset 0 0 0 2px #0079bf; 
    }


    input[type=submit] {
    background-color: rgba(9,30,66,.04);
    box-shadow: none;
    border: none;
    cursor: pointer;
    display: inline-block;
    font-weight: 400;
    line-height: 20px;
    margin: 8px 4px 0 0;
    padding: 6px 12px;
    text-align: center;
    }
    input[type=submit].primary {
    background-color: #5aac44;
    box-shadow: none;
    border: none;
    border-radius:5px;
    color: #fff;
    }
    .cc-controls-section {
    float: left;
    padding-bottom: 6px;
    }
    .card-composer {
    padding-bottom: 8px;
        margin: 3px;
    border-radius: 3px;
    display:none;
    }
    .fa-times{
    height: 32px;
    line-height: 32px;
    width: 32px;
    color: #6b778c;    
    }
    textarea{
    overflow:hidden;
    overflow-wrap:break-word;
    resize:none;
    height: 60px;
    width:100%;
    border-radius: 8px;
    padding: 10px;
    box-shadow: inset 0 0 0 2px #0079bf;
    }
    textarea:focus{
    outline: 0;
    box-shadow: inset 0 0 0 2px #0079bf; 
    }
    .board{
    background-position: center;
    background-size: cover;
    }
